<div class="share-icons">

  {% if show_facebook %}
    <a
      title="{{ 'social.icons.facebook' | t }}"
      href="{{  settings.facebook_url  }}"
      class="facebook"
      target="_blank">
      {% render 'snip-icons',
         wrapper: '.share-icons',
         type: 'social',
         icon: 'facebook',
         classes: 'share-icons--icon',
         size: '20px',
         fill: 'var(--text-color)',
         hover: 'var(--text-color)' %}
    </a>
  {% endif %}


  {% if show_twitter %}
    <a
      title="{{ 'social.icons.twitter' | t }}"
      href="{{ settings.twitter_url }}"
      title="Share on Twitter"
      target="_blank"
      class="twitter">
      {% render 'snip-icons',
         wrapper: '.share-icons',
         type: 'social',
         icon: 'twitter',
         classes: 'share-icons--icon',
         size: '20px',
         fill: 'var(--text-color)',
         hover: 'var(--text-color)' %}
    </a>
  {% endif %}
  
{% if show_instagram %}
     <a
      title="{{ 'social.icons.instagram' | t }}"
      href="{{ settings.instagram_url }}"
      title="Share on instagram"
      target="_blank"
      class="social-icons--icon">
      {% render 'snip-icons',
         wrapper: '.share-icons',
         type: 'social',
         icon: 'instagram',
         classes: 'share-icons--icon',
         size: '20px',
         fill: 'var(--text-color)',
         hover: 'var(--text-color)' %}
    </a>
{% endif %}
{% if show_youtube %}
     <a
      title="{{ 'social.icons.youtube' | t }}"
      href="{{   settings.youtube_url }}"
      title="Share on youtube"
      target="_blank"
      class="social-icons--icon">
      {% render 'snip-icons',
         wrapper: '.share-icons',
         type: 'social',
         icon: 'youtube',
         classes: 'share-icons--icon',
         size: '20px',
         fill: 'var(--text-color)',
         hover: 'var(--text-color)' %}
    </a>
{% endif %}

  {% if show_pinterest %}
    {% if template contains 'blog' or template contains 'article' %}
      {% if article.image %}
        <a
          title="{{ 'social.icons.pinterest' | t }}"
          target="blank"
          href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}{{ article.url }}&amp;media={{ article.image.src | img_url: '10241024' | prepend: 'http:' }}"
          title="Pin this"
          class="pinterest">
          {% render 'snip-icons',
             wrapper: '.share-icons',
             type: 'social',
             icon: 'pinterest',
             classes: 'share-icons--icon',
             size: '20px',
             fill: 'var(--text-color)',
             hover: 'var(--text-color)' %}
        </a>
      {% endif %}
    {% else %}
      <a
        title="{{ 'social.icons.pinterest' | t }}"
        target="blank"
        href="{{ settings.pinterest_url }}"
        title="Pin this"
        class="pinterest">
        {% render 'snip-icons',
           wrapper: '.share-icons',
           type: 'social',
           icon: 'pinterest',
           classes: 'share-icons--icon',
           size: '20px',
           fill: 'var(--text-color)',
           hover: 'var(--text-color)' %}
      </a>
    {% endif %}
  {% endif %}

</div>
