  <div  class="masonrygallery " id="{{ section.id }}">
    <div class="section-header row">
              <div class="section-title text-center">
                <h2>{{ section.settings.masonrytitel }}</h2>
              </div>
              <div class="rte  text-center">
                <p>{{ section.settings.masonrysubtitel }}</p>
              </div>
      </div>
    <div class="grid-wrapperm display_block_desktop">  
        {% for block in section.blocks %}
      	<div class="mobielimg {{ block.settings.imgwidth }}">
             <img src="{{block.settings.kome | img_url:'master'}}" alt="">
            <div class="imgcontaint {{ block.settings.contentside }}">
              <p class="imgtitle">{{ block.settings.sarititle }}</p>
              <h6>{{ block.settings.sarsubititle }}</h6>
              {% if block.settings.viwbtn != blank %}<a href="{{ block.settings.viwbtn }}">{{ block.settings.komtag }}</a>{% endif %}
            </div>
      	</div>
        {% endfor %}	
    </div>
</div>

    <div class="imgwithslider display_block_mobile">  
        {% for block in section.blocks %}
      	<div class="mobielimg {{ block.settings.imgwidth }}">
             <img src="{{block.settings.kome | img_url:'master'}}" alt="">
            <div class="imgcontaint {{ block.settings.contentside }}">
              <p class="imgtitle">{{ block.settings.sarititle }}</p>
              <h6>{{ block.settings.sarsubititle }}</h6>
              {% if block.settings.viwbtn != blank %}<a href="{{ block.settings.viwbtn }}">{{ block.settings.komtag }}</a>{% endif %}
            </div>
      	</div>
        {% endfor %}	
    </div>

<style>
   .masonrygallery{    
    padding: 30px 15px 30px 15px;
    width: 100%;
    max-width: 100%;
    padding-right: 55px;
    padding-left: 55px;
  }
.grid-wrapperm > div {
	display: flex;
	justify-content: center;
	align-items: center;
    position:relative;
}
.grid-wrapperm > div > img {
	width: 100%;
	height: 100%;
	object-fit: cover;
	border-radius: 5px;
}

.grid-wrapperm {
	display: grid;
	grid-gap: 10px;
	grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
	grid-auto-rows: 200px;
	grid-auto-flow: dense;
}
.grid-wrapperm .wide {
	grid-column: span 2;
}
.grid-wrapperm .tall {
	grid-row: span 2;
}
.grid-wrapperm .big {
	grid-column: span 2;
	grid-row: span 2;
}
.grid-wrapperm .imgcontaint{
    position: absolute;
}
  .grid-wrapperm .imgcontaint .imgtitle{
    font-weight: 700;
  }
.grid-wrapperm  .imgcontaint.left{
    left:10px;
    text-align: left;
  }
  .grid-wrapperm  .imgcontaint.right{
    right:10px;
    text-align: right;
  }
  @media screen and (max-width: 600px) {
    .grid-wrapperm{
      display: flex;
      flex-wrap: wrap; 
      width: 94%;
      margin: 0 auto;
    }
    .masonrygallery{
       padding: 30px 15px 30px 15px; 
    }
    .mobielimg{
      width: 48%;
    }
    .mobielimg:nth-child(3n + 1){
      width: 100%;
    }
    .grid-wrapperm > div{
        margin: 0 auto;
    }
  }
  .display_block_desktop{
    display: grid;
  }
    .display_block_mobile{
    display:none;
  }
    @media screen and (max-width: 767px) {
