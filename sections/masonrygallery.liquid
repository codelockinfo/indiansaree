<style>
  
   .masonrygallery{    
    padding: 30px 15px 30px 15px;
    width: 100%;
    max-width: 100%;
    padding-right: 55px;
    padding-left: 55px;
  }
.grid-wrapperm > div {
	display: flex;
	justify-content: center;
	align-items: center;
    position:relative;
}
.grid-wrapperm > div > img {
	width: 100%;
	height: 100%;
	object-fit: cover;
	border-radius: 5px;
}

.grid-wrapperm {
	display: grid;
	grid-gap: 10px;
	grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
	grid-auto-rows: 200px;
	grid-auto-flow: dense;
}
.grid-wrapperm .wide {
	grid-column: span 2;
}
.grid-wrapperm .tall {
	grid-row: span 2;
}
.grid-wrapperm .big {
	grid-column: span 2;
	grid-row: span 2;
}
.grid-wrapperm .imgcontaint{
    position: absolute;
}
  .grid-wrapperm .imgcontaint .imgtitle{
    font-weight: 700;
  }
.grid-wrapperm  .imgcontaint.left{
    left:10px;
    text-align: left;
  }
  .grid-wrapperm  .imgcontaint.right{
    right:10px;
    text-align: right;
  }
  @media screen and (max-width: 600px) {
    .grid-wrapperm{
      display: flex;
      flex-wrap: wrap; 
      width: 94%;
      margin: 0 auto;
    }
    .masonrygallery{
       padding: 30px 15px 30px 15px; 
    }
    .mobielimg{
      width: 48%;
    }
    .mobielimg:nth-child(3n + 1){
      width: 100%;
    }
    .grid-wrapperm > div{
        margin: 0 auto;
    }
  }
</style>
