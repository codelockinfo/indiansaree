<script type="text/javascript" src="https://cdn.jsdelivr.net/jquery.slick/1.4.1/slick.min.js"></script>

<div class="video-slider">
  <div class="container016">
    <div class="video-carasol videoslid">
      {% for block in section.blocks %}
        <div class="mainslider">
          <div class="mainvideo">
            <figure>
              <video class="bgv" id="video" muted loop autoplay>
                <source src="{{ block.settings.video_url }}" type="video/mp4">
              </video>
            </figure>
            {%- assign product = block.settings.product -%}
            <a href="{{ product.url }}">
              <div class="prodiv">
                <img src="{{ product.featured_image| img_url: '200x200' }}">
                <h2>{{ product.title }}</h2>
                <h3>Rs.{{ product.price }}</h3>
              </div>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Section name",
    "settings": [

    ],
        "blocks":[
  {
  "name":"block",
  "type":"block",
  "settings":[
        {
      "id" : "video_url",
      "type" : "text",
      "label" : "Video link"
    },
    {
          "type": "product",
          "id": "product",
          "label": " Product "
        }
  ]
  }
  ],
    "presets": [
  {
    "name": "new video section"
  }
]
  }
{% endschema %}

