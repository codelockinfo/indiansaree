<div class="video-slider">
  <div class="section-header row">
    <div class="section-title text-center">
      <h2>{{ section.settings.mainhed }}</h2>
    </div>
    <div class="rte  text-center">
      <p>{{ section.settings.ptectr }}</p>
    </div>
  </div>
  <div class="container016">
    <div class="video-carasol videoslid responsive">
      {% for block in section.blocks %}
        {%- assign product = block.settings.product -%}
        <a href="{{ product.url }}">
          <div class="mainslider">
            <div class="mainvideo">
              <figure>
                <video class="bgv" id="video" muted loop autoplay>
                  <source src="{{ block.settings.video_url }}" type="video/mp4">
                </video>
              </figure>

              <div class="prodiv">
                <img src="{{ product.featured_image| img_url: '200x200' }}">
                <h2>{{ product.title | truncate: 60 }}</h2>
              </div>
            </div>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "video section",
    "settings": [
 {
      "id" : "mainhed",
      "type" : "text",
      "label" : "Heading"
    },
       {
      "id" : "ptectr",
      "type" : "text",
      "label" : "sub heading"
    }
    ],
        "blocks":[
  {
  "name":"block",
  "type":"block",
  "settings":[
        {
      "id" : "video_url",
      "type" : "text",
      "label" : "Video link"
    },
    {
          "type": "product",
          "id": "product",
          "label": " Product "
        }
  ]
  }
  ],
    "presets": [
  {
    "name": "new video section"
  }
]
  }
{% endschema %}

